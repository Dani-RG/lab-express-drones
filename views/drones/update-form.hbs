<h2>Update the drone</h2>
<form method="POST" action="/drones/{{_id}}/edit">
    <label>Name</label>
    <input type="text" name="name" value="{{name}}"/>
    <label>Propellers</label>
    <input required type="number" name="propellers" value="{{propellers}}"/>
    <label>Maximun speed</label>
    <input required type="number" name="maxSpeed" value="{{maxSpeed}}"/>
    <button type="submit">Save changes</button>
</form>